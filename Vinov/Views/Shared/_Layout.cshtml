<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="/lib/limonte-sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="/lib/jqueryui/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/font.css" asp-append-version="true" />
    <link rel="stylesheet" href="/assets/css/style.css" asp-append-version="true" />
    <script src="/js/tailwind.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#fdb913',
                        secondary: '#666666',
                        complementary: '#cccccc',
                        vakifGrey: "#333333"
                    }
                }
            }
        }
    </script>
    <style type="text/tailwindcss">
        @@layer utilities {
            .input-row {
                @@apply grid grid-cols-1 gap-y-2 lg:grid-cols-[1fr_10fr] lg:gap-x-10 items-center;
            }

            .input-error {
                @@apply block mt-2 text-xs;
            }

            .custom-input {
                box-sizing: border-box;
                @@apply w-full max-w-[250px] rounded border border-complementary p-2 outline-0 focus:ring-0
            }

            .custom-button {
                @@apply block w-40 py-4 text-sm text-black rounded font-bold bg-primary transition-colors border-2 border-transparent focus:border-2 focus:border-black hover:bg-black hover:text-white active:bg-vakifGrey active:text-white active:border-transparent disabled:opacity-60
            }
                .custom-button:focus {
                    border-radius: 0.25rem;
                    border-width: 2px;
                    border-color: transparent;
                }
        }
    </style>
</head>
<body style="background-color: #e9e4e0; height: 100%">
    <header class="header">
        <img src="/assets/images/logo.svg" alt="Vinov Logo" width="150" height="100" />
    </header>
    @RenderBody()

    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jqueryui/jquery-ui.min.js"></script>
    <script src="/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="/lib/limonte-sweetalert2/sweetalert2.min.js"></script>
    <script src="/lib/jquery.mask.min.js"></script>
    <script src="/lib/moment.js"></script>
    <script src="/js/Vinov.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>